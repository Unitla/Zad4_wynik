<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/view1"
    tools:context="com.example.szymon.zad4_wynik.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/Radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horizon Zero Dawn" />

            <RadioButton
                android:id="@+id/Radio2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Fallout" />

        </RadioGroup>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="109dp"
            android:layout_margin="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/horizon" />


        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Radio3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Witcher III Wild Hunt" />

                <RadioButton
                    android:id="@+id/Radio4"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Nioh" />

            </RadioGroup>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:layout_margin="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/geralt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Radio5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Dragon Age Inquisition" />

                <RadioButton
                    android:id="@+id/Radio6"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="The Last of Us" />

            </RadioGroup>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:layout_margin="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/inkwizycja" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Radio9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="League of Ahri" />

                <RadioButton
                    android:id="@+id/Radio10"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Just a fox" />

            </RadioGroup>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:layout_margin="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/ahri" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Radio7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Pc Master Race?" />

                <RadioButton
                    android:id="@+id/Radio8"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Nah Console is better" />

            </RadioGroup>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="109dp"
                android:layout_margin="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/andek3" />

        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wynikowy"
            android:text="Poznaj wynik"/>

    </LinearLayout>

</ScrollView>